{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "resource": {
      "type": "string"
    },
    "id": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "minimumAmount": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        },
        "currency": {
          "type": "string"
        }
      },
      "required": [
        "value",
        "currency"
      ]
    },
    "maximumAmount": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        },
        "currency": {
          "type": "string"
        }
      },
      "required": [
        "value",
        "currency"
      ]
    },
    "image": {
      "type": "object",
      "properties": {
        "size1x": {
          "type": "string"
        },
